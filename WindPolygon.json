{
  "$id": "https://raw.githubusercontent.com/mkawahara22/hypar-schemas/main/WindPolygon.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "description": "Polygon for a wind overlay with pressure attached",
  "title": "WindPoly",
  "x-namespace": "Elements",
  "type": ["object"],
  "allOf": [{ "$ref": "https://hypar.io/Schemas/GeometricElement.json" }],
  "required": ["Profile", "Pressures", "Zone"],
  "properties": {
    "Profile": {
      "description": "The shape of the wind pressure",
      "$ref": "https://hypar.io/Schemas/Geometry/Profile.json"
    },
    "Pressures": {
      "$ref": "https://raw.githubusercontent.com/mkawahara22/hypar-schemas/main/Pressures.json"
    },
    "Zone": {
      "description": "The wind pressure zone ",
      "type": "string"
    },
    "WindFaceConditions": {
      "type": "array",
      "description": "List of the wind face conditions based off of a wind vector",
      "items": {
        "$ref": "https://raw.githubusercontent.com/mkawahara22/hypar-schemas/main/AME_Wind/WindFaceCondition.json"
      }
    },
    "ZoneType": {
      "type": "string",
      "description": "Describes the type of zone this is",
      "enum": ["Wall", "Roof", "Parapet"]
    },
    "PlanRefLine": {
      "$ref": "https://hypar.io/Schemas/Geometry/Line.json",
      "description": "The Plan reference line of this polygon (for walls only)"
    },
    "PerimeterSegmentRefLine": {
      "$ref": "https://hypar.io/Schemas/Geometry/Line.json",
      "description": "The Perimeter Segment line that this wind poly overlaps (for walls only)"
    }
  },
  "additionalProperties": false
}
