{
    "$id": "https://raw.githubusercontent.com/mkawahara22/hypar-schemas/main/Joist.json",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "description": "A joist.",
    "title": "Joist",
    "x-namespace": "Elements",
    "type": ["object", "null"],
    "allOf": [{"$ref": "https://hypar.io/Schemas/GeometricElement.json"}],
    "required": ["CenterLine", "Profile"],
    "properties": {
        "CenterLine": {
            "description": "The center line of the joist.",
            "$ref": "https://hypar.io/Schemas/Geometry/Line.json"
        },
        "Profile": {
            "description": "The joist's cross section.",
            "$ref": "https://hypar.io/Schemas/Geometry/Profile.json"
        },
        "TribWidth": {
            "description": "Trib Width of Joist",
            "type":"number"
        }, 
        "JoistDepth": {
            "description": "Depth of Joist",
            "type":"number"
        },
        "Weight": {
            "description": "Weight of Joist",
            "type":"number"
        },
        "PressurePolys":{
            "description": "Collection of overlapping load polygons",
            "type":["array"],
            "items":{
                "type":["object","null"],
                "required": ["zone","percentage","pressure"],
                "properties": {
                    "zone" : {"type": "string"},
                    "percentage" : {"type": "number"},
                    "pressure":{"type": "number"}
                }
            }
        },
        "TribArea":{
            "description": "Trib Area of Joist",
            "type":"number"
        },
        "SpanLength":{
            "description": "Trib Area of Joist",
            "type":"number"
        },
        "Loads":{
            "description": "Loads applied to joist",
            "type":["array"],
            "items":{
                "type":["object","null"],
                "required": ["loadName","plf"],
                "properties": {
                    "loadName" : {"type": "string"},
                    "plf" : {"type": "number"}
                }
            }
        }
    },
    "additionalProperties": false

  
}